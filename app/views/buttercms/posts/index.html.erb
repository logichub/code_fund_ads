<section class="pt-8">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2 class="mb-0">
          Recent articles
        </h2>
        <p class="mb-5 text-muted">
          Read up on the latest from the CodeFund team
        </p>
      </div>
    </div> <!-- / .row -->

    <div class="row mb-4">
      <% @posts.each do |post| %>
        <%= render partial: '/buttercms/posts/post', locals: { post: post } %>
      <% end %>
    </div>

  </div> <!-- / .container -->
</section>

<% if @previous_page || @next_page %>
  <section class="py-7 py-md-10">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-9 col-lg-8 col-xl-7">
          
          <%= link_to buttercms_blog_path(page: @previous_page), aria: { label: "Previous" },
            class: "btn btn-block btn-outline-gray-300 d-flex align-items-center" do %>
            <span class="mx-auto"><i class="fe fe-arrow-left"></i> Previous</span> 
          <% end if @previous_page %>

          <%= link_to buttercms_blog_path(page: @next_page), aria: { label: "Next" },
            class: "btn btn-block btn-outline-gray-300 d-flex align-items-center" do %>
            <span class="mx-auto">Next <i class="fe fe-arrow-right"></i></span> 
          <% end if @next_page %>

        </div>
      </div> <!-- / .row -->
    </div> <!-- / .container -->
  </section>
<% end %>

  <!-- Pagination -->
  <nav aria-label="Page navigation">
    <ul class="pagination mb-0">
      <% if @previous_page %>
        <li class="page-item ml-0">
          <%= link_to buttercms_blog_path(page: @previous_page), aria: { label: "Previous" } do %>
            <span aria-hidden="true">&laquo; Previous</span>
            <span class="sr-only">Previous</span>
          <% end %>
        </li>
      <% end %>
      <% if @next_page %>
        <li class="page-item ml-0">
          <%= link_to buttercms_blog_path(page: @next_page), aria: { label: "Next" } do %>
            <span aria-hidden="true">Next &raquo;</span>
            <span class="sr-only">Next</span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </nav>
  <!-- End Pagination -->

<div class="position-relative">
  <div class="shape shape-bottom shape-fluid-x svg-shim text-gray-200">
    <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
    </svg>
  </div>
</div>

<section class="pt-6 pt-md-8 bg-gray-200">
  <div class="container pb-6 pb-md-8">
    <div class="row align-items-center">
      <div class="col-12 col-md">
        
        <!-- Heading -->
        <h3 class="mb-1 font-weight-bold">
          Get our stories delivered
        </h3>

        <!-- Text -->
        <p class="font-size-lg text-muted mb-6 mb-md-0">
          From us to your inbox weekly.
        </p>

      </div>
      <div class="col-12 col-md-5">
            
        <!-- Form -->
        <form>
          <div class="row">
            <div class="col">
              
              <!-- Input -->
              <input type="email" class="form-control" placeholder="Enter your email">

            </div>
            <div class="col-auto ml-n5">
              
              <!-- Button -->
              <button class="btn btn-primary" type="submit">
                Subscribe
              </button>

            </div>
          </div> <!-- / .row -->
        </form>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>